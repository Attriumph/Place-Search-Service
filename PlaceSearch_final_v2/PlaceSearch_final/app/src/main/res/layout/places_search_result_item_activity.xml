<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#00aa8d"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_back_white_27x27" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/favor_emp_white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/favorite"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/share"
            android:layout_toRightOf="@+id/back"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhddddddddddddddddddddddd"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <lingquan.firstApp.placesearch.viewpagerindicator.TabPageIndicator
            android:id="@+id/tab"
            android:background="#00aa8d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></lingquan.firstApp.placesearch.viewpagerindicator.TabPageIndicator>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"></android.support.v4.view.ViewPager>
    </LinearLayout>



</LinearLayout>
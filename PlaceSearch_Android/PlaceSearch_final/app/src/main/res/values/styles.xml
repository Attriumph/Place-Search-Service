<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TabPageIndicatorTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/tane_tabpageIndicator</item>
    </style>

    <style name="tane_tabpageIndicator">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/tane_tab_bg</item>
    </style>

</resources>
